{
  "version": "1.0.0",
  "description": "Step 21 semantic execution-denial policy for Battle-Hardened AI gateway traffic.",
  "roles": {
    "network_entity": {
      "allowed_actions": ["network_request"]
    }
  },
  "actions": {
    "network_request": {
      "payload_schema": {
        "endpoint": {
          "type": "string",
          "max_length": 2048,
          "no_control_chars": true
        },
        "method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
        }
      },
      "trust": {
        "min_score": 40.0
      }
    }
  }
}
