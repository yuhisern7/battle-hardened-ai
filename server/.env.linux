# Linux runtime configuration (template for Docker/host)
# Copy this to .env on Linux: cp .env.linux .env

# Premium mode with central relay
RELAY_ENABLED=true
RELAY_URL=wss://YOUR_VPS_IP:60001
RELAY_API_URL=https://YOUR_VPS_IP:60002
RELAY_CRYPTO_ENABLED=true
MESSAGE_SECURITY_KEY_DIR=server/crypto_keys
CUSTOMER_ID=linux-client-0000
PEER_NAME=linux-node

# Security Policy - Block internal network attacks (scans, exploits from LAN)
BLOCK_INTERNAL_THREATS=true

# Node Fingerprinting - Federated Learning (auto-detects OS/type)
NODE_FINGERPRINT_ENABLED=true

# Port Configuration
DASHBOARD_PORT=60000
P2P_PORT=60001

# VirusTotal API Key (OPTIONAL - get free at https://virustotal.com)
VIRUSTOTAL_API_KEY=

# AbuseIPDB API Key (OPTIONAL)
ABUSEIPDB_API_KEY=

# Timezone Configuration
TZ=Asia/Kuala_Lumpur

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Session/crypto secret key (set to a long random string in your deployment)
# IMPORTANT: Keep this consistent across restarts/nodes so admin sessions stay valid.
BATTLE_HARDENED_SECRET_KEY=9d3f8b1a7c4e2f9056ab13d7e8c2f4a190b7e3d5c8a26f4d3b9c7e1a5d8f2c9

# Security Settings
MAX_BLOCKED_IPS=10000
THREAT_LOG_MAX_SIZE=100000
AUTO_BLOCK_ENABLED=true

# Enterprise API Settings
ENABLE_ENTERPRISE_API=true
API_RATE_LIMIT=1000

# AI/ML Settings - Time-Weighted Training (10x recent threats)
# 90-day sliding window, exponential backoff (6h→12h→24h)
AI_LEARNING_ENABLED=true
AUTO_TRAIN_THRESHOLD=5
EXPLOITDB_SCRAPER_ENABLED=false

# ENTERPRISE FEATURES (Included in Premium)
NETWORK_PERFORMANCE_ENABLED=true
COMPLIANCE_REPORTING_ENABLED=true
ADVANCED_VISUALIZATION_ENABLED=true

# Linux Firewall Enforcement (Docker host)
# When true, the container will sync blocked_ips.json into host iptables/ipset.
# Requires Docker host networking and NET_ADMIN capabilities.
BH_FIREWALL_SYNC_ENABLED=false
