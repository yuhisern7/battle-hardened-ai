# Windows-Specific Configuration Template
# This file is loaded directly by server/server.py on Windows
# Do NOT rename; edit the installed .env.windows after running the installer

# ========================================
# MODE SELECTION: Premium vs Free
# ========================================

# PREMIUM MODE ($25/month) - RECOMMENDED
# - Connects to relay server for global threat intelligence
# - Downloads pre-trained ML models (280 KB) from relay
# - NO need to download ExploitDB (824 MB)
# - Minimal bandwidth, fast updates
RELAY_ENABLED=true
RELAY_URL=wss://YOUR_VPS_OR_DOMAIN:60001       # WebSocket relay for P2P mesh
RELAY_API_URL=https://YOUR_VPS_OR_DOMAIN:60002 # ML training API (POST /train)
RELAY_CRYPTO_ENABLED=true
MESSAGE_SECURITY_KEY_DIR=server/crypto_keys
CUSTOMER_ID=demo-customer-0000
PEER_NAME=windows-node

# Security Policy - Block internal network attacks
BLOCK_INTERNAL_THREATS=true

# FREE MODE (No relay server)
# - Option A: Download ExploitDB locally (824 MB, takes 10-15 mins)
# - Option B: P2P with other containers
# Uncomment if using Free mode:
# RELAY_ENABLED=false

# Node Fingerprinting - Federated Learning (auto-detects OS/type)
NODE_FINGERPRINT_ENABLED=true

# Port Configuration
DASHBOARD_PORT=60000
P2P_PORT=60001

# VirusTotal API Key (OPTIONAL - get free at https://virustotal.com)
VIRUSTOTAL_API_KEY=

# AbuseIPDB API Key (OPTIONAL)
ABUSEIPDB_API_KEY=

# Timezone Configuration
TZ=Asia/Kuala_Lumpur

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Session/crypto secret key (set to a long random string in your deployment)
# IMPORTANT: CHANGE THIS before production and keep it consistent across restarts/nodes.
BATTLE_HARDENED_SECRET_KEY=8e0c3f4a92b74f5c8d1a6e3f9b2471dc5a8e0c39f724b1da8f3c7e1b9d4520f

# Security Settings
MAX_BLOCKED_IPS=10000
THREAT_LOG_MAX_SIZE=100000
AUTO_BLOCK_ENABLED=true

# Enterprise API Settings
ENABLE_ENTERPRISE_API=true
API_RATE_LIMIT=1000

# AI/ML Settings - Time-Weighted Training (10x recent threats)
# 90-day sliding window, exponential backoff (6h→12h→24h)
AI_LEARNING_ENABLED=true
AUTO_TRAIN_THRESHOLD=5
EXPLOITDB_SCRAPER_ENABLED=false

# ========================================
# ENTERPRISE FEATURES (Included in Premium)
# ========================================

# Network Performance Monitoring (real-time bandwidth, latency, packet loss)
NETWORK_PERFORMANCE_ENABLED=true

# Compliance Reporting (PCI-DSS, HIPAA, GDPR, SOC 2)
COMPLIANCE_REPORTING_ENABLED=true

# Advanced Visualization (network topology, attack flows, heatmaps)
ADVANCED_VISUALIZATION_ENABLED=true
